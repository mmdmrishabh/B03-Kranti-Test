{{ 'section-first.css' | asset_url | stylesheet_tag }}

<div class="first-section page-width {{ section.settings.image_position }}">
  <div class="first-section--image-container">
    {% if section.settings.image_desktop != blank and section.settings.image_mobile != blank %}
      {% render 'responsive-picture',
        desktopImage: section.settings.image_desktop,
        mobileImage: section.settings.image_mobile
      %}
    {% endif %}
  </div>
  <div class="first-section--text-container">
    {% if section.settings.heading != blank %}
      <div class="first-section--heading h1">{{ section.settings.heading }}</div>
    {% endif %}
    {% if section.settings.description != blank %}
      <div class="first-section--description">{{ section.settings.description }}</div>
    {% endif %}
    {% if section.settings.button_lable != blank %}
      <div class="first-section--button">
        <a
          href="{{ section.settings.button_link }}"
          class="button {% if  section.settings.button_link == blank  %} disabled {% endif %}"
        >
          {{- section.settings.button_lable -}}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "First section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop image",
      "info": "Recommended dimensions: 1440 x 600"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "Recommended dimensions: 600 x 400"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Business Formal Choices</p>"
    },
    {
      "type": "text",
      "id": "button_lable",
      "label": "Button label",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button url"
    },
    {
      "type": "radio",
      "id": "image_position",
      "label": "Image position",
      "options": [
        { "value": "left", "label": "First Image" },
        { "value": "right", "label": "First Text" }
      ],
      "default": "left",
      "info": "Select image position"
    }
  ],
  "presets": [
    {
      "name": "First Section"
    }
  ]
}
{% endschema %}
