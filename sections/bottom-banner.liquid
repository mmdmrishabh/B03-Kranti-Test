{{ 'bottom-banner.css' | asset_url | stylesheet_tag }}
{% comment %} <div class="first-section" page-width {{ section.settings.image_position }}>
    <div class="first-section--container">
        {%for block in section.blocks %}
            <div class="first-section--block">
                <div class="first-section-block--img-container">
                    {% render 'responsive-picture',
                        desktopImage: block.settings.image_desktop,
                        mobileImage: block.settings.image_mobile
                    %}
                </div>
                <div class="first-section-block--content">
                    <div><p> &#x2022 {{ block.settings.pre_heading }}</p></div>
                    <div>{{ block.settings.title }}</div>
                    <div><a class="button" href="{{ block.settings.button_link }}">{{ block.settings.button_label }}</a></div>
                </div>
            </div>
        {% endfor %}
    </div>
</div> {% endcomment %}
{% schema %}
{
  "name": "Bottom Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Business Formal Choices"
    }
  ],
  "blocks": [
    {
      "type": "custom-block",
      "name": "custom-block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop image",
          "info": "Recommended dimensions: 1440 x 600"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile image",
          "info": "Recommended dimensions: 600 x 400"
        },
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Pre Heading",
          "default": "Introduce"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "We Believe in the Power of Fashion"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description",
            "default": "<p>fashion emerges as the universal language that speaks volumes without words.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Show More"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bottom Banner"
    }
  ]
}
{% endschema %}